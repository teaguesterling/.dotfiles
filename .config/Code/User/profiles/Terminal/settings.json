{
  // Clean terminal-focused UI
  "workbench.startupEditor": "none",
  "workbench.statusBar.visible": false,
  "workbench.editor.showTabs": "none",
  "chat.commandCenter.enabled": false,
  "workbench.layoutControl.enabled": false,
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.navigationControl.enabled": false,
  
  // Hide sidebar/explorer by default
  "explorer.autoReveal": false,
  
  // Close window when terminal is closed
  "window.closeWhenEmpty": true,
  
  // Always open new windows (don't reuse existing ones)
  "window.openFilesInNewWindow": "on",
  "window.openFoldersInNewWindow": "on",
  
  // Disable most extensions for clean terminal experience
  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": false,
  "extensions.ignoreRecommendations": true,
  "extensions.showRecommendationsOnlyOnDemand": true,
  
  // Terminal configuration
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.defaultLocation": "editor",
  
  // Smart terminal features
  "terminal.integrated.commandsToSkipShell": [
    "-workbench.action.terminal.focusNext",
    "-workbench.action.terminal.focusPrevious"
  ],
  "terminal.integrated.sendKeybindingsToShell": true,
  "terminal.integrated.allowMnemonics": false,
  "terminal.integrated.allowChords": false,
  "terminal.integrated.altClickMovesCursor": false,
  
  // Disable window mnemonics completely
  "window.enableMenuBarMnemonics": false,
  "window.customMenuBarAltFocus": false,
  
  
  // Disable terminal context menu
  "terminal.integrated.rightClickBehavior": "nothing",
  "workbench.activityBar.location": "hidden"
}
