// Place your key bindings in this file to override the defaults
[
    {
        "key": "ctrl+shift+x",
        "command": "workbench.action.toggleMaximizedPanel",
        "when": "panelAlignment == 'center' || panelPosition != 'bottom' && panelPosition != 'top'"
    },
    {
        "key": "alt+up",
        "command": "-workbench.action.terminal.accessibleBufferGoToPreviousCommand",
        "when": "accessibleViewIsShown && terminalHasBeenCreated && accessibleViewCurrentProviderId == 'terminal' || accessibleViewIsShown && terminalProcessSupported && accessibleViewCurrentProviderId == 'terminal'"
    },
    {
        "key": "alt+down",
        "command": "-workbench.action.terminal.focusNextPane",
        "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported"
    },
    {
        "key": "alt+right",
        "command": "-workbench.action.terminal.focusNextPane",
        "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported"
    },
    {
        "key": "alt+up",
        "command": "-workbench.action.terminal.focusPreviousPane",
        "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported"
    },
    {
        "key": "alt+left",
        "command": "-workbench.action.terminal.focusPreviousPane",
        "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported"
    },
    {
        "key": "alt+down",
        "command": "-workbench.action.terminal.accessibleBufferGoToNextCommand",
        "when": "accessibleViewIsShown && accessibleViewCurrentProviderId == 'terminal' || accessibleViewIsShown && terminalHasBeenCreated && accessibleViewCurrentProviderId == 'terminal' || accessibleViewIsShown && terminalProcessSupported && accessibleViewCurrentProviderId == 'terminal'"
    },
  // tmux compatibility
  {"key": "alt+left", "command": "-workbench.action.navigateBack"},
  {"key": "alt+right", "command": "-workbench.action.navigateForward"},
  {"key": "ctrl+a", "command": "-editor.action.selectAll", "when": "terminalFocus"},
  
  // vim compatibility
  {"key": "ctrl+[", "command": "-editor.action.outdentLines"},
  {"key": "ctrl+]", "command": "-editor.action.indentLines"},
  
  // Profile switching
  {"key": "ctrl+alt+1", "command": "workbench.action.openSettingsJson", 
   "args": {"profile": "Minimal"}},
  {"key": "ctrl+alt+2", "command": "workbench.action.openSettingsJson",
   "args": {"profile": "Terminal"}},
  {"key": "ctrl+alt+3", "command": "workbench.action.openSettingsJson",
   "args": {"profile": "Editor"}},
  {"key": "ctrl+alt+4", "command": "workbench.action.openSettingsJson",
   "args": {"profile": "Core"}},
  {"key": "ctrl+alt+5", "command": "workbench.action.openSettingsJson",
   "args": {"profile": "IDE"}}

]

